<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.moviematchapp.presentation.pages.list.TrendingMovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_trending_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_savedMoviesFragment"
            app:destination="@id/savedMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.moviematchapp.presentation.pages.detail.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" />
    <fragment
        android:id="@+id/savedMoviesFragment"
        android:name="com.example.moviematchapp.presentation.pages.list.SavedMoviesFragment"
        android:label="SavedMoviesFragment"
        tools:layout="@layout/fragment_saved_movies">
        <action
            android:id="@+id/action_savedMoviesFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

</navigation>
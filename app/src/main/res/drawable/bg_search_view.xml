<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with colored border and rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Change this to the desired button background color -->
            <stroke
                android:width="1dp"
                android:color="@color/black" /> <!-- This sets the red color for the border, adjust the color code as needed -->
            <corners android:radius="10dp" /> <!-- Set the radius of the corners to 5dp -->
        </shape>
    </item>

</layer-list>
